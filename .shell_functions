#!/usr/bin/env sh

function compress() {
    if [ $# -eq 0 ]; then
        echo -e "Not enough arguments specified.";
        return 1;
    fi

    if [ -f $1 ] || [ -d $1 ]; then
        target="${1%%.*}.tar.gz"
        if [ -f $target ]; then
            echo "'$target' already exists.";
        fi

        tar czf $target $1
    else 
        echo "'$1' is not a valid file/directory.";
    fi
}

function download() {
    if [ $# -eq 0 ]; then 
        echo -e "Not enough arguments specified.";
        return 1; 
    fi

    case $1 in
        magnet* | *.torrent)
            webtorrent download $1
            ;;
        http*)
            wget -q $1
            echo "Downloaded $(basename $1)"
            ;;
        *) 
            echo "'$1' cannot be downloaded." 
            ;;
    esac
}

function extract() {
    if [ $# -eq 0 ]; then
        echo -e "Not enough arguments specified.";
        return 1;
    fi

    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2)  tar xjf $1 ;;
            *.tar.gz)   tar xzf $1 ;;
            *.bz2)      bunzip2 $1 ;;
            *.gz)       gunzip $1 ;;
            *.tar)      tar xf $1 ;;
            *.tbz2)     tar xjf $1 ;;
            *.tgz)      tar xzf $1 ;;
            *.zip)      unzip $1 ;;
            *.7z)       7z x $1 ;;
            *) echo "'$1' cannot be extracted." ;;
        esac
    else
        echo "'$1' is not a valid file."
    fi
}

function upload() { 
    if [ $# -eq 0 ]; then 
        echo -e "Not enough arguments specified."; 
        return 1; 
    fi

    tmpfile=$(mktemp -t transferXXX); 
    if tty -s; then
        basefile=$(basename "$1" | sed -e 's/[^a-zA-Z0-9._-]/-/g');
        curl --progress-bar --upload-file "$1" "https://transfer.sh/$basefile" >> $tmpfile;
    else 
        curl --progress-bar --upload-file "-" "https://transfer.sh/$1" >> $tmpfile; 
    fi
    
    cat $tmpfile; 
    rm -f $tmpfile;
    echo ""
}

function send() {
    if [ $# -lt 2 ]; then 
        echo -e "Not enough arguments specified."; 
        return 1; 
    fi

    target=$3
    if [ -z "${target}" ]; then
        target="~/"
    fi

    scp -rp $2 "$1:$target"
}