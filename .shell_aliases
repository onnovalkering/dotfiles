#!/usr/bin/env sh

# Basic commands --------------------------------------------------------------#

alias ~='cd ~'
alias ..='cd ..'
alias cp='cp -iv'
alias diff='colordiff'
alias grep='grep -na --color=auto'
alias whereami='realpath .'
alias ls='ls -Flh --color=auto'
alias ll='ls -FlhA --color=auto'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias path='echo -e ${PATH//:/ \\n}'
alias sha1='openssl sha1'
alias sha256='openssl sha256'

# Cargo commands -------------------------------------------------------------#

alias c='cargo'
alias cb='cargo build'
alias ch='cargo check'
alias cl='cargo clean'
alias cr='cargo run'
alias ct='cargo test'

# Docker commands ------------------------------------------------------------#

alias d='docker'
alias db='docker build'
alias dc-u='docker-compose up -d'
alias dc-d='docker-compose down'
alias dr='docker run --rm'

# Git commands ---------------------------------------------------------------#

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias gl='git log --graph'
alias gm='git merge'
alias gu='git push origin'
alias gp='git pull'
alias gt='git tag'
alias gs='git status'

alias master='git checkout master'
alias develop='git checkout develop'

# Kubernetes commands --------------------------------------------------------#

alias k='kubectl'
alias ka='kubectl attach'
alias kc='kubectl create'
alias kcj='kubectl get cj'
alias kcj-d='kubectl delete cj'
alias kcm='kubectl get cm'
alias kcm-d='kubectl delete cm'
alias kctx='kubectl config current-context'
alias kctx-s='kubectl config use-context'
alias kd='kubectl describe'
alias kde='kubectl get deploy'
alias kde-d='kubectl delete deploy'
alias kds='kubectl get ds'
alias kds-d='kubectl delete ds'
alias ke='kubectl exec -it'
alias kep='kubectl get ep'
alias kep-d='kubectl delete ep'
alias kin='kubectl get ing'
alias kin-d='kubectl delete ing'
alias kj='kubectl get job'
alias kj-d='kubectl delete job'
alias kl='kubectl logs'
alias kno='kubectl get no'
alias kns='kubectl get ns'
alias kns-d='kubectl delete ns'
alias kns-s='kubectl config set-context $(kubectl config current-context) --namespace'
alias kpo='kubectl get po'
alias kpo-d='kubectl delete po'
alias kpv='kubectl get pv'
alias kpv-d='kubectl delete pv'
alias kpvc='kubectl get pvc'
alias kpvc-d='kubectl delete pvc'
alias kr='kubectl run'
alias krs='kubectl get rs'
alias krs-d='kubectl delete rs'
alias krc='kubectl get rc'
alias krc-d='kubectl delete rc'
alias ksc='kubectl get sc'
alias ksc-d='kubectl delete sc'
alias kse='kubectl get secrets'
alias kse-d='kubectl delete secrets'
alias ksts='kubectl get sts'
alias ksts-d='kubectl delete sts'
alias ksvc='kubectl get svc'
alias ksvc-d='kubectl delete svc'

# Networking commands --------------------------------------------------------#

alias fping='ping -c 100 -i .1'
alias ping='ping -c 5'
alias wget='wget -c'
