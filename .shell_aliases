#!/usr/bin/env sh

if [[ `uname` == 'Darwin' ]]; then
    PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
    PATH=/usr/local/opt/findutils/libexec/gnubin:$PATH
    PATH=/usr/local/opt/grep/libexec/gnubin:$PATH
    PATH=/usr/local/opt/gnu-sed/libexec/gnubin:$PATH
    PATH=/usr/local/opt/gnu-tar/libexec/gnubin:$PATH
fi

# Basic commands --------------------------------------------------------------#

alias ~='cd ~'
alias ..='cd ..'
alias cp='cp -iv'
alias diff='colordiff'
alias grep='grep --color=auto'
alias whereami='realpath .'
alias ls='ls -Flh --color=auto'
alias ll='ls -FlhA --color=auto'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias path='echo -e ${PATH//:/ \\n}'
alias sha256='openssl sha256'

# Docker commands ------------------------------------------------------------#

alias d='docker'
alias dcu='docker-compose up -d'
alias dcd='docker-comppose down'
alias dk='docker kill'

# Git commands ---------------------------------------------------------------#

alias gh='cd ~/Repositories/GitHub'
alias gl='cd ~/Repositories/GitLab'

alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias gl='git log'
alias gm='git merge'
alias gu='git push origin'
alias gp='git pull'
alias gt='git tag'
alias gs='git status'

alias master='git checkout master'
alias develop='git checkout develop'

# Kubernetes commands --------------------------------------------------------#

alias k='kubectl'
alias kc='kubectl create'
alias kd='kubectl describe'
alias kl='kubectl logs'
alias kno='kubectl get no'
alias kns='kubectl get ns'
alias kns-d='kubectl delete ns'
alias kpo='kubectl get po'
alias kpo-d='kubectl delete po'
alias kr='kubectl run'
alias krs='kubectl get rs'
alias krs-d='kubectl delete rs'
alias ksvc='kubectl get svc'
alias ksvc-d='kubectl delete svc'

alias kctx='kubectl config current-context'
alias kctx-s='kubectl config use-context'
alias kns-s='kubectl config set-context $(kubectl config current-context) --namespace'

# Networking commands --------------------------------------------------------#

alias fping='ping -c 100 -i .1'
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias ping='ping -c 5'
alias wget='wget -c'
