#!/usr/bin/env sh

# Basic commands --------------------------------------------------------------#

alias ~='cd ~'
alias ..='cd ..'
alias cp='cp -iv'
alias diff='colordiff'
alias grep='grep -na --color=auto'
alias whereami='realpath .'
alias ls='ls -Flh --color=auto'
alias ll='ls -FlhA --color=auto'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias path='echo -e ${PATH//:/ \\n}'
alias sha1='openssl sha1'
alias sha256='openssl sha256'

# Cargo commands -------------------------------------------------------------#

alias c='cargo'
alias cb='cargo build'
alias ch='cargo check'
alias cl='cargo clean'
alias cr='cargo run'
alias ct='cargo test'

# Docker commands ------------------------------------------------------------#

alias d='docker'
alias db='docker build'
alias dc-u='docker-compose up -d'
alias dc-d='docker-compose down'
alias dr='docker run --rm'

# Git commands ---------------------------------------------------------------#

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias gl='git log --graph'
alias gm='git merge'
alias gu='git push origin'
alias gp='git pull'
alias gt='git tag'
alias gs='git status'

alias master='git checkout master'
alias develop='git checkout develop'

# Kubernetes commands --------------------------------------------------------#

alias k='kubectl'
alias ka='kubectl attach'
alias kc='kubectl create'
alias kctx='kubectl config current-context'
alias kctx-s='kubectl config use-context'
alias kd='kubectl describe'
alias ke='kubectl exec -it'
alias kjo='kubectl get jobs'
alias kjo-d='kubectl delete job'
alias kl='kubectl logs'
alias kno='kubectl get no'
alias kns='kubectl get ns'
alias kns-d='kubectl delete ns'
alias kns-s='kubectl config set-context $(kubectl config current-context) --namespace'
alias kpo='kubectl get po'
alias kpo-d='kubectl delete po'
alias kr='kubectl run'
alias krs='kubectl get rs'
alias krs-d='kubectl delete rs'
alias kse='kubectl get secrets'
alias kse-d='kubectl delete secrets'
alias ksvc='kubectl get svc'
alias ksvc-d='kubectl delete svc'

# Networking commands --------------------------------------------------------#

alias fping='ping -c 100 -i .1'
alias ping='ping -c 5'
alias wget='wget -c'
